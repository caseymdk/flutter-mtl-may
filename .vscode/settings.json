{
  "dart.lineLength": 120,
  "[dart]": {
    "editor.rulers": [
      120
    ],
  },
  "python.defaultInterpreterPath": ".venv/bin/python",
  "mypy.targets": [
    ".",
  ],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "debug.console.wordWrap": false,
  "files.exclude": {
    "**/__pycache__": true,
    "**/.dart_tool": true,
    "**/*.freezed.dart": true,
    "**/*.g.dart": true,
    "**/*.gen.dart": true,
    "**/custom_lint.log": true,
    "aws/cdk.out": true,
    "flutter/.flutter-plugins*": true,
    "flutter/build": true,
    "flutter/lib/protobuf/schema/*.dart": true,
    "flutter/lib/l10n/generated": true,
    "protobuf/python/*.py": true,
    "protobuf/python/*.pyi": true,
    "protobuf/protodot": true,
    ".venv": true,
    ".mypy_cache": true,
  },
  "editor.formatOnSave": true,
  "ruff.format.args": [
    "--line-length=120"
  ],
  "cSpell.ignorePaths": [
    "**/*.yaml",
    "**/*.g.dart",
    "**/*.json"
  ]
}